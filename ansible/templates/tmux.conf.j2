# SET
set -g default-terminal screen-256color
set -g prefix C-s

set-option -g history-limit 10000
setw -g mode-keys vi

# BINDS
unbind r
bind r source-file ~/.tmux.conf \; display "Reloading config..."
bind-key m set -g mouse \; display "Toggle mouse..."
bind -T copy-mode-vi v send -X begin-selection # rebind v instead of space when highlighting text when in vi mode
bind -T copy-mode-vi y send -X copy-selection-and-cancel # rebind y instead of enter when copying text in vi mode

# STYLE
# Set the base style for the status bar
set-option -g status-bg colour235  # Dark grey background
set-option -g status-fg white
set-option -g status-interval 5

# Left side of the status bar
set-option -g status-left-length 40
set-option -g status-left '#[bg=blue,fg=white] #S #[bg=colour235,fg=white]'

# Right side of the status bar
set-option -g status-right-length 100
set-option -g status-right '#[fg=yellow]%H:%M %d-%b-%Y #[fg=white]'

# Status line for active window
setw -g window-status-current-format '#[bg=green,fg=black] #I:#W #[bg=colour235,fg=white]'
setw -g window-status-format '#[bg=colour235,fg=white] #I:#W '

# Display only pane number in pane border
set-option -g pane-border-status top
set-option -g display-panes-active-colour cyan
set-option -g display-panes-colour white
setw -g pane-border-format ' #P '
